@model ReMoBi_DCSN.Models.image

@{
    ViewBag.Title = "DeletePic";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<style>
    .dl-horizontal dt {
        float: left;
        clear: left;
        width: 30%; /* Độ rộng của label */
        text-align: right;
        padding-right: 10px; /* Khoảng cách giữa label và display */
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-left: 35%; /* Khoảng cách giữa display và label */
    }

    .display-info {
        display: inline-block;
        margin-right: 20px; /* Khoảng cách giữa các ô display */
        vertical-align: top; /* Để đảm bảo các ô display nằm trên cùng một hàng */
    }

    .button-container {
        text-align: center;
        margin-left: -440px; /* Khoảng cách từ đỉnh trang */
    }

    .Delete-button,
    .back-button {
        width: 160px; /* Độ rộng cố định cho cả hai nút */
        margin: 0 auto; /* Căn giữa theo chiều ngang */
        display: inline-block; /* Hiển thị trên cùng một dòng */
        background-color: #FF2E63; /* Màu xanh dương cho Save */
        color: white; /* Màu chữ trắng */
        border: none;
        border-radius: 5px; /* Bo góc tròn nhẹ */
        padding: 10px 20px;
        font-size: 18px; /* Kích thước chữ lớn hơn */
        cursor: pointer;
        text-decoration: none; /* Loại bỏ gạch chân (đối với ActionLink) */
        text-align: center;
        margin: 10px 0; /* Thêm khoảng cách giữa nút và các element xung quanh */
    }

    .back-button {
        background-color: #333;
    }
</style>
<h2 style="padding-top: 30px;"></h2>
<hr />
<h3>Are you sure you want to delete this Picture?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name_file_images)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name_file_images)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Caption_images)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Caption_images)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostID)
        </dd>

    </dl>
</div>

<br />
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="button-container">
        @Html.ActionLink("Back to List", "Picture", null, new { @class = "back-button" })
        <input type="submit" value="Delete" class="Delete-button" />
    </div>
}