@model ReMoBi_DCSN.Models.Post

@{
    ViewBag.Title = "DeletePost";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<style>
    .dl-horizontal dt {
        float: left;
        clear: left;
        width: 30%; /* Độ rộng của label */
        text-align: right;
        padding-right: 10px; /* Khoảng cách giữa label và display */
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-left: 35%; /* Khoảng cách giữa display và label */
    }

    .display-info {
        display: inline-block;
        margin-right: 20px; /* Khoảng cách giữa các ô display */
        vertical-align: top; /* Để đảm bảo các ô display nằm trên cùng một hàng */
    }

    .button-container {
        text-align: center;
        margin-left: -440px; /* Khoảng cách từ đỉnh trang */
    }

    .Delete-button,
    .back-button {
        width: 160px; /* Độ rộng cố định cho cả hai nút */
        margin: 0 auto; /* Căn giữa theo chiều ngang */
        display: inline-block; /* Hiển thị trên cùng một dòng */
        background-color: #FF2E63; /* Màu xanh dương cho Save */
        color: white; /* Màu chữ trắng */
        border: none;
        border-radius: 5px; /* Bo góc tròn nhẹ */
        padding: 10px 20px;
        font-size: 18px; /* Kích thước chữ lớn hơn */
        cursor: pointer;
        text-decoration: none; /* Loại bỏ gạch chân (đối với ActionLink) */
        text-align: center;
        margin: 10px 0; /* Thêm khoảng cách giữa nút và các element xung quanh */
    }

    .back-button {
        background-color: #333;
    }
</style>
<script src="//cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>
<h2 style="padding-top: 30px;"></h2>
<hr />
<h3>Are you sure you want to delete this Post?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu Đề
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Post_Title, new { @readonly = "readonly", @class = "form-control" })
        </dd>

        <dt>
            Tác giả
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Author, new { @readonly = "readonly", @class = "form-control" })
        </dd>

        <dt>
            Ngày Đăng
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Post_Date, new { @readonly = "readonly", @class = "form-control" })
        </dd>

        <dt>
            Teaser
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Teaser_Post, new { @readonly = "readonly", @class = "form-control" })
        </dd>

        <dt>
            Nội dung
        </dt>
        <dd style="width:600px; text-align:justify">
            @*@Html.TextBoxFor(model => model.Content_Post, new { @readonly = "readonly", @class = "form-control" })*@
            <div style="position: relative; width: 100%; display: inline-block;">
                @Html.TextAreaFor(model => model.Content_Post, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <script>
                CKEDITOR.replace("Content_Post", { width: "100%", height: "200px" });
            </script>
        </dd>

        <dt>
            Nhãn dán
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.tag.Name_Tags, new { @readonly = "readonly", @class = "form-control" })
        </dd>

        <dt>
            Ảnh Bìa
        </dt>
        <dd>
            <img src="@Url.Content("~/images/"+ Model.AnhBia)" width="200" />
        </dd>

        <dt>
           Lượt thích
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.luotthich, new { @readonly = "readonly", @class = "form-control" })
        </dd>
    </dl>
</div>

<br />
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="button-container">
        @Html.ActionLink("Back to List", "Post",null, new { @class = "back-button" })
        <input type="submit" value="Delete" class="Delete-button" /> 
    </div>
}