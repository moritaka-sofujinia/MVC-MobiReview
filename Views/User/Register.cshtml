
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPageIndex.cshtml";
}
<style>
    /* Style the login button */
    .btn-primary {
        background-color: transparent;
        color: #000; /* Black text color */
        border: 2px solid #FFD700; /* Light yellow border */
        border-radius: 25px; /* Rounded corners */
        transition: background-color 0.3s, color 0.3s; /* Smooth transition effect */
    }

        /* Style the login button on hover */
        .btn-primary:hover {
            background-color: white; /* White background on hover */
            color: #000; /* Black text color on hover */
        }
</style>
<main>
    <div class="container pt-5">
        <h1 class="text-center">Sign Up</h1>

        <div class="container">
            <div class="row">
                <div class="mx-auto">
                    <div class="card card-body" style="width: 578px ;border: none;">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                            <form id="submitForm" action="Login" method="post" data-parsley-validate="" data-parsley-errors-messages-disabled="true" novalidate="" _lpchecked="1">
                                <input type="hidden" name="_csrf" value="7635eb83-1f95-4b32-8788-abec2724a9a4">
                                <div class="form-group required">
                                    <label for="Email">Email</label>
                                    <input type="email" class="form-control text-lowercase" id="Email" required="" name="Email" placeholder="your Email here">
                                </div>

                                <div class="form-group required">
                                    <label for="Name">Name</label>
                                    <input type="text" class="form-control text-lowercase" id="Name" required="" name="Name" placeholder="your name here">
                                </div>

                                <div class="form-group required">
                                    <label for="UserName">User Name</label>
                                    <input type="text" class="form-control text-lowercase" id="UserName" required="" name="UserName" placeholder="Your username for Login">
                                </div>

                                <div class="form-group required">
                                    <label for="Password">Password</label>
                                    <input type="password" class="form-control text-lowercase" id="Password" required="" name="Password">
                                </div>

                                <div class="form-group required">
                                    <label for="RetyprPass">Confirm your Password</label>
                                    <input type="password" class="form-control text-lowercase" id="Password" required="" name="Password">
                                </div>

                                <div class="form-group pt-1">
                                    <button class="btn btn-primary btn-block" type="submit">Sign me up</button>
                                </div>
                            </form>
                        }
                        <p class="small-xl pt-3 text-center">
                            <span class="text-muted">Already have an Account?</span>
                            <a href="@Url.Action("Login","User")">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

